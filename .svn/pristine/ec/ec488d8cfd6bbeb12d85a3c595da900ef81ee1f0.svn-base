<template>
  <div>
    <input class="input" type="checkbox" :id="'check_box'+ _uid" @change="onChange" :value="value" />
    <label :for="'check_box'+ _uid" class="label" :style="_style"></label>
  </div>
</template>
<script>
export default {
  model: {
    prop: "value",
    event: "change"
  },
  props: {
    value: {
      type: Array,
      default: false
    },
    size: {
      type: String,
      required: false,
      default: "1.6rem"
    },
    color: {
      type: String,
      required: false,
      default: "red"
    }
  },
  methods: {
    onChange(value) {
      this.$emit("change", value);
    }
  },
  computed: {
    _style() {
      return {
        width: this.size,
        height: this.size
      };
    }
  }
};
</script>
<style lang="less" scoped>
.input {
  display: none;
}
.input:checked + .label::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100%;
  background: #999;
  border-radius: 50%;
  transform: translate(-50%, -50%) scale(0.8);
}
.label {
  position: relative;
  width: 1rem;
  height: 1rem;
  border-radius: 50%;
  border: 1px solid red;
}
</style>
